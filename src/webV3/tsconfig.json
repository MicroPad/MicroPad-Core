{
  "compilerOptions": {
	"outDir": "build/dist",
	"module": "esnext",
	"target": "es6",
	"lib": [
	  "es7",
	  "dom"
	],
	"sourceMap": true,
	"allowJs": true,
	"jsx": "react",
	"moduleResolution": "node",
	"rootDir": "src",
	"forceConsistentCasingInFileNames": true,
	"noImplicitReturns": true,
	"noImplicitThis": true,
	"noImplicitAny": false,
	"strictNullChecks": true,
	"suppressImplicitAnyIndexErrors": true,
	"noUnusedLocals": false,
	"baseUrl": "."
  },
  "exclude": [
	"node_modules",
	"build",
	"scripts",
	"acceptance-tests",
	"webpack",
	"jest",
	"src/setupTests.ts"
  ]
}
